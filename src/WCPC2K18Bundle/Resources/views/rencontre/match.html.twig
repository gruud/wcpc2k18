{% extends "WCPC2K18Bundle:Default:index.html.twig" %}

 {% block contenu %}
    
        <table class="table table-striped">
            <thead class="bg-success bg-sm">
                <tr>
                    <th>Date</th>
                    <th>Match</th>
                    
                    <th>Votre pronostic</th>
                    
                </tr>
            </thead> 
            <tbody>
                {% for rencontre in rencontres %}
                    <tr>
                        <td> {{ rencontre.date|date("Y-m-d H:i:s") }} <br/> Journ√©e : {{ rencontre.journee }} </td>
                        <td> {{ rencontre.equipeDom.nom }} <img src="{{ asset( 'bundles/wcpc2k18/images/flags/32/' ~  rencontre.equipeDom.Flag32 ) }}" alt="" /> - <img src="{{ asset( 'bundles/wcpc2k18/images/flags/32/' ~  rencontre.equipeExt.Flag32 ) }}" alt="" />
                         {{ rencontre.equipeExt.nom }} <br/> Groupe {{ rencontre.equipeDom.groupe }} </td>

